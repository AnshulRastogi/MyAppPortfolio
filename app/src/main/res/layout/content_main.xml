<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36sp"
        android:layout_marginTop="24sp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/my_nanodegress_apps"
        android:textAppearance="?android:textAppearanceLarge"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_custom"
        android:fontFamily="sans-serif-dark"
        android:onClick="btnSpotifyStreamer"
        android:text="@string/spotify_streamer"
        android:textAllCaps="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_custom"
        android:fontFamily="sans-serif-dark"
        android:onClick="btnScoresApp"
        android:text="@string/scores_app"
        android:textAllCaps="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_custom"
        android:fontFamily="sans-serif-dark"
        android:onClick="btnLibraryApp"
        android:text="@string/library_app"
        android:textAllCaps="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_custom"
        android:fontFamily="sans-serif-dark"
        android:onClick="btnBuildItBigger"
        android:text="@string/build_it_bigger"
        android:textAllCaps="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_custom"
        android:fontFamily="sans-serif-dark"
        android:onClick="btnXyzReader"
        android:text="@string/xyz_reader"
        android:textAllCaps="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_custom"
        android:fontFamily="sans-serif-dark"
        android:onClick="btnCapstoneMyOwnApp"
        android:text="@string/capstone_my_own_app"
        android:textAllCaps="true"/>
</LinearLayout>
